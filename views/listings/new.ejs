  <% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
    <div class="col-8 offset-2">

    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >

      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholdere="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback"> tittle look good</div>
        <div class="invalid-feedback">please enter single word tittle</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          class="form-control"
          placeholder="enter description"
          required
        ></textarea>
        <div class="invalid-feedback">please enter short description</div>
      </div>
      
      <!-- <div class="mb-3">
        <lable for="image" class="form-label">Image link</lable>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"/>
      </div> -->

      <div class="mb-3">
        <lable for="image" class="form-label">Upload Listing Image</lable>
        <input
          name="listing[image]"
          type="file"
          class="form-control"/>
          required
      </div>

      <div class="row">

        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label" >Price</lable>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
          <div class="invalid-feedback"> please enter a valid price </div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
          <div class="invalid-feedback"> country should be valid</div>
        </div>
      
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback"> Location is required. </div>
      </div>

     
      <button class="btn btn-dark add-btn">Add</button>
      <br>
      <br>

    </form>

    </div>
    </div>

  </body>

